<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/radius_12white">

    <ImageView
        android:id="@+id/img_emailitemdelete"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_do_disturb_on_24" />

    <TextView
        android:id="@+id/edt_emailitemtype"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_emailitemdelete"
        android:layout_marginLeft="15dp"
        android:text="Cá nhân"
        android:textColor="#95017AFA"
        android:textSize="16dp" />

    <View
        android:id="@+id/view_emailitem"
        android:layout_toRightOf="@id/edt_emailitemtype"
        android:layout_width="0.5dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:background="#393939"/>

    <EditText
        android:id="@+id/edt_emailiteminfo"
        android:layout_toRightOf="@+id/view_emailitem"
        android:layout_toLeftOf="@id/img_emailitemdeteteinfo"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:hint="Email"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxLength="50"
        android:inputType="textEmailAddress"
        android:textColorHint="#656565"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/img_emailitemdeteteinfo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_cancel_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#393939"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>